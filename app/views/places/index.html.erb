<style type="text/css">
.rating{
	position: relative;
	font-size: 20px;
	top: 14%;
	font-weight: bold;
	font-size: 30px;
	color: red;
}

.cont p {
	font-size: 12px;
}

.rating span span{
	color:gray;
}
</style>


<br>

<% @places.each do |place| %>
	<div class="post-box col-xs-10 col-xs-offset-1">
		<div class="pull-right">
		<% if place.user.present? %>
		<% end %>
		</div>
		<h1><%= link_to place.name, place_path(place) %></h1>	<!--replaces place.name -->
			<div class = "rating">
			<span><% place.average_rating.to_i.times do %>
			*
			<% end %><span>
			<% place.neg_rating.to_i.times do %>
			*
			<% end %>
			</span>
			</div>
		<i><%= place.address %></i><br><br>
		<p><%= place.description %></p>

			<% if place.comments.present? %>			<!-- last review -->
			<div class="col-xs-12">
		  	<blockquote>
			<% if place.comments.last.rating.present? %>
			    <% place.comments.last.rating.to_i.times do %>
			    *
			    <% end %>
			    <% place.comments.last.neg_rating.to_i.times do %>
			    -
			   	<% end %>
			<% end %>
		    <%= place.comments.last.message %>
		    <small><%= place.comments.last.user.email %></small>
		  	</blockquote>
</div>
<% end %>

</div>
<% end %>


<div id="pag"
	<div class="digg_pagination">
		<%= will_paginate @places %>
	</div>
</div>