<style type="text/css">


</style>
	

<div class="placeinfo">
<center><h1><%= @place.name %> </h1>
<i><small><%= @place.address %></small></i><br></center>
<div class = "rating">
<span><% @place.average_rating.to_i.times do %>
<i class="glyphicon glyphicon-thumbs-up"></i>
<% end %><span>
<% @place.neg_rating.to_i.times do %>
<i class="glyphicon glyphicon-thumbs-up"></i>
<% end %>
</span>
<br>
</div>
<p><%= @place.description %></p><br>

<% else %>

	<div id="editdel">	
		<% if current_user && current_user == @place.user %>
		<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>
		<%= link_to 'Destroy', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
		<% end %>
	</div>
<div class = "commbutton">
<button class="btn btn-primary btn" data-toggle="modal" data-target="#myModal">
  Add a Review
</button>
</div>

	<h4>Comments</h4>
	<div class = "cont">
		<% @place.comments.each do |comment| %>
		<div class ="indcomm">
				<div class = "indrating">
			    	<% if comment.message.present? %>
			    	<% comment.rating.to_i.times do %>
			    	<i class="glyphicon glyphicon-plus-sign"></i>
			    	<% end %>
			    <span>
			    	<% comment.neg_rating.to_i.times do %>
			    	<i class="glyphicon glyphicon-minus-sign"></i>
			    	<% end %>
			    	</span>
			    </div>
						<p><%= comment.message %></p>
						<p><%= comment.user.email %></p>
						<% end %>
					</div>
	<% end %>

		</div>
	</div>
</div>
</div>


<% if @place.latitude.present? && @place.longitude.present? %>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
	<script>
		function initialize() {
		  var myLatlng = new google.maps.LatLng(<%= @place.latitude %>,<%= @place.longitude %>);
		  var myCent = new google.maps.LatLng(<%= @place.latitude - 0.00%>, <%= @place.longitude - 0.011 %>);
		  var mapOptions = {
		    zoom: 15,
		    center: myCent,
		    disableDefaultUI: true
		  }
		  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

		  var marker = new google.maps.Marker({
		    position: myLatlng,
		    map: map,
		    title:"<%= @place.name %>"
		  });
		}
		google.maps.event.addDomListener(window, 'load', initialize);
    </script>
<div id="map-canvas"></div>
<% end %>
	<br>
</div>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a Review</h4>
      </div>
      	<%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Review", :class => 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  </div>
</div>