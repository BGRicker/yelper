<style type="text/css">
.placeinfo{
  -moz-box-shadow: 1px 1px 2px 0 #d0d0d0;
  -webkit-box-shadow: 1px 1px 2px 0 #d0d0d0;
  box-shadow: 1px 1px 2px 0 #d0d0d0;
  background: #fff; 
  border: 1px solid #ccc;
  border-color: #e4e4e4 #bebebd #bebebd #e4e4e4;
  margin-bottom:15px;
  padding:15px;
  position:absolute;
  z-index:1;
  left: 20px;
  width: 40%;
  height: 525px;
  opacity: .9;
}

.cont {
	height: 50%;
	width: 100%;
	overflow: scroll;
}

.rating{
	font-size: 20px;
	position: absolute;
	top: 14%;
	text-align: center;
	width: 95%;
	font-weight: bold;
		font-size: 30px;
	color: red;
}

.cont p {
	font-size: 12px;
}

.rating span span{
	color:gray;
}

#editdel{
	position: absolute;
	bottom: 5%;
	right: 5%;
	text-align: right;
}

#map-canvas{
	position:absolute;
	height:92%;
	width:100%;
	top: 50px;
	left: 0px;
	z-index:-1;
}

.commbutton{
	position: absolute;
	bottom: 5%;
	left: 5%;
}

</style>


<div class="placeinfo">
<center><h1><%= @place.name %> </h1>
<i><small><%= @place.address %></small></i><br><br></center>
<br>
<p><%= @place.description %></p><br>
<div class = "rating">
<span><% @place.average_rating.to_i.times do %>
*
<% end %><span>
<% @place.neg_rating.to_i.times do %>
*
<% end %>
</span>
</div>
<% else %>

	<div id="editdel">	
		<% if current_user && current_user == @place.user %>
		<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>
		<%= link_to 'Destroy', place_path(@place), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
		<% end %>
	</div>
<div class = "commbutton">
<button class="btn btn-primary btn" data-toggle="modal" data-target="#myModal">
  Add a Review
</button>
</div>

	<h4>Comments</h4>
	<div class = "cont">
		<% @place.comments.each do |comment| %>
			    <blockquote> 
			    	<% if comment.humanized_rating.present? %>
			    	<b><%= comment.humanized_rating %></b>
			     	<% end %>
						<p><%= comment.message %></p>
						<p><%= comment.user.email %></p>
			    </blockquote>

	<% end %>
		</div>
	</div>
</div>
</div>



<% if @place.latitude.present? && @place.longitude.present? %>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
	<script>
		function initialize() {
		  var myLatlng = new google.maps.LatLng(<%= @place.latitude %>,<%= @place.longitude %>);
		  var myCent = new google.maps.LatLng(<%= @place.latitude - 0.003%>, <%= @place.longitude - 0.0085 %>);
		  var mapOptions = {
		    zoom: 15,
		    center: myCent,
		    disableDefaultUI: true
		  }
		  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

		  var marker = new google.maps.Marker({
		    position: myLatlng,
		    map: map,
		    title:"<%= @place.name %>"
		  });
		}
		google.maps.event.addDomListener(window, 'load', initialize);
    </script>
<div id="map-canvas"></div>
<% end %>
	<br>
</div>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a Review</h4>
      </div>
      	<%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Review", :class => 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  </div>
</div>